{
  "manifest_version": 3,
  "name": "RateRadar",
  "version": "1.1.0",
  "description": "Track, convert, and monitor currency and crypto exchange ratesâ€”anytime, anywhere.",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.exchangerate.host/*",
    "https://api.coingecko.com/*",
    "https://api.freecurrencyapi.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://latest.currency-api.pages.dev/*",
    "https://api.exchangerate-api.com/*",
    "https://api.exchangeratesapi.io/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "RateRadar",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://github.com/*",
        "https://*.github.com/*",
        "https://gitlab.com/*",
        "https://*.gitlab.com/*",
        "https://bitbucket.org/*",
        "https://*.bitbucket.org/*",
        "https://stackoverflow.com/*",
        "https://*.stackoverflow.com/*",
        "https://developer.mozilla.org/*",
        "https://*.developer.mozilla.org/*",
        "https://docs.github.com/*",
        "https://*.docs.github.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "option.html",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 